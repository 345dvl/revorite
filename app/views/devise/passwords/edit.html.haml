= render "shared/header"
= provide(:title, 'パスワードの再発行')

.main
  .editpassword
    .editpassword-header
      パスワードの再発行
    .editpassword-items
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        = f.hidden_field :reset_password_token
        .editpassword-items__label
          = f.label :password, "新しいパスワード"
          %span.note （半角英数字6文字以上、30文字以内）
        .editpassword-items__field
          = f.password_field :password, autofocus: true, class: "user-input-password", id: "editpassword-input-password"
          .editpassword-items__field--caution.user-caution-password
        .editpassword-items__label
          = f.label :password_confirmation, "（確認用）新しいパスワードをもう一度入力"
        .editpassword-items__field
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "user-input-password_confirmation", id: "editpassword-input-password_confirmation"
          .editpassword-items__field--caution.user-caution-password_confirmation
        .editpassword-items__submit
          = f.submit "パスワードを変更する", class: "button-submit user-editpassword user-button-submit", disabled: true
      .editpassword-links
        = link_to(">> 新規登録", new_user_registration_path)
        %br
        = link_to(">> ログイン", new_user_session_path)
    .editpassword-footer
      = link_to("<< トップに戻る", root_path)

= render "shared/footer"