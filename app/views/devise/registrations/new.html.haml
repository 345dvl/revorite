= render "shared/header"

.main
  .signup
    .signup-header
      新規ユーザ登録
    .signup-items
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .signup-items__label
          = f.label :name
          %span.note （30文字以内）
        .signup-items__field
          = f.text_field :name, autocomplete: "name", placeholder: "例）レボリテ太郎", id: "signup-input-name"
          .signup-items__field--caution#signup-caution-name
        .signup-items__label
          = f.label :email
          %span.note （架空のアドレスでOK、ログイン時に使用）
        .signup-items__field
          = f.email_field :email, autocomplete: "email", placeholder: "例）example@example.com", id: "signup-input-email"
          .signup-items__field--caution#signup-caution-email
        .signup-items__label
          = f.label :password
          %span.note （半角英数字6文字以上、30文字以内）
        .signup-items__field
          = f.password_field :password, autocomplete: "new-password", id: "signup-input-password"
          .signup-items__field--caution#signup-caution-password
        .signup-items__label
          = f.label :password_confirmation
        .signup-items__field
          = f.password_field :password_confirmation, autocomplete: "new-password", id: "signup-input-password_confirmation"
          .signup-items__field--caution#signup-caution-password_confirmation
        .signup-items__submit
          = f.submit "登録する", class: "button-submit user-registration", id: "signup-button-submit" #, disabled: true
    .signup-footer
      = link_to("<< トップに戻る", root_path)
          

= render "shared/footer"