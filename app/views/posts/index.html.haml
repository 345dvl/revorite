- content_for :no_turbolink, true

= render "shared/top-header"

.main
  .main-menu-outer
    .main-menu-inner
      - if user_signed_in?
        .profile
          = render partial: 'posts/profile', locals: {user: @user}
        = link_to new_post_url, "data-turbolinks": false do
          .button-post
            %i.fas.fa-feather-alt
            投稿する
      - else
        .profile
      
  .main-posts
    .main-posts-header
      %ul.main-posts-header-list
        = link_to root_path, class: 'active', remote: true do
          .main-posts-header-list-box
            - if user_signed_in?
              %li タイムライン
              %i.fas.fa-question-circle
                .fukidashi
                  フォローしているユーザの投稿を見ることができます
            - else
              %li 最新の投稿
        = link_to trend_posts_path, class: 'non-active', remote: true do 
          .main-posts-header-list-box
            %li 人気の投稿
            %i.fas.fa-question-circle
              .fukidashi
                お気に入りに多く登録されている投稿を見ることができます
    - if @posts.empty?
      %ul.main-posts-contents
        %li.post
          .post-container
            投稿はまだありません。
    - else
      %ul.main-posts-contents
        = render partial: "posts/posts", locals: {posts: @posts}
        
.footer
