- content_for :no_turbolink, true

= render "shared/header"

.main
  = form_with model: @post, local: true do |f|
    - if @post.errors.any?
      .main-error
        %ul
        - @post.errors.full_messages.each do |message| 
          %li= message
          
    .main-rev__flg
      = f.check_box :rev_flg
      = f.label 'レビューをする'
    = f.fields_for :review, @post.build_review do |r|
      .main-rev__rate#star
        = r.hidden_field :rate
      .main-rev__title
        = r.text_field :title, size: "71", placeholder: "レビュー対象（商品名・タイトルなど）"
      .main-rev__price
        = r.text_field :price, size: "71", placeholder: "価格（任意）"

    .main-textarea
      本文
      %br
      = f.text_area :text, size: "70x8"
    .main-images
      = f.file_field :images, accept: "image/jpeg, image/png", multiple: true
    .main-submit
      = f.submit '投稿'

= render "shared/footer"