= render "shared/top-header"

.main
  = form_with model: @post, local: true do |f|
    - if @post.errors.any?
      .main-error
        %ul
        - @post.errors.full_messages.each do |message| 
          %li= message
          
    .main-rev__flg
      = f.check_box :rev_flg
      = f.label :rev_flg, 'レビューをする'
    .main-textarea
      = f.text_area :text, size: "70x8"
    .main-images
      = f.file_field :images, multiple: true
    .main-submit
      = f.submit '投稿'