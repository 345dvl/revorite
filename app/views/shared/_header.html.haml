.header
  .header-left
    .header-left-title
      = link_to root_path, "data-turbolinks": false do
        Revorite
    .header-left-pagename
      - case request.fullpath
      - when /\/users\/[0-9]+/ 
        - if user_signed_in?
          - if @user.id == current_user.id
            ｜ マイページ
          - else
            ｜ ユーザ情報
        - else
          ｜ ユーザ情報
      - when "/users/sign_up"
        ｜ 新規登録
      - when "/users/sign_in"
        ｜ ログイン
      - when "/users/edit"
        ｜ プロフィールの編集
      - when "/posts/new"
        ｜ 新規投稿
        
  .header-right
    %ul
      - if user_signed_in?
        = link_to user_path(current_user.id), "data-turbolinks": false do
          %li
            - if current_user.image.attached? 
              = image_tag(current_user.image, alt: 'デフォルトアイコン')
            - else
              = image_tag('sample/default_icon.png', alt: 'デフォルトアイコン')
          %li#username
            = current_user.name
        %li
          = link_to destroy_user_session_path, method: :delete do
            %i.fas.fa-sign-out-alt
            ログアウト
      - else
        %li
          = link_to('#') do
            %i.fas.fa-user-check
            かんたんログイン
        - if current_page?(new_user_session_path)
          %li{style: "font-weight: bold;"}
            %i.fas.fa-sign-in-alt
            ログイン 
        - else
          %li
            = link_to new_user_session_path, "data-turbolinks": false do
              %i.fas.fa-sign-in-alt
              ログイン
        - if current_page?(new_user_registration_path)
          %li{style: "font-weight: bold;"}
            %i.fas.fa-plus
            新規登録 
        - else
          %li
            = link_to new_user_registration_path, "data-turbolinks": false do
              %i.fas.fa-plus
              新規登録